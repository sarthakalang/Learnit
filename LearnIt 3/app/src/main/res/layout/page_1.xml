<?xml version="1.0" encoding="utf-8"?>

 <RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/logo_main"
            android:src="@drawable/logo_main"
            />


        <TextView
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/logo_main"
            android:id="@+id/heading_main"
            android:text="@string/heading_main"
            android:textSize="60sp"
            android:textColor="#A07100"
            android:paddingTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/subheading_main"
            android:id="@+id/subheading_main"
            android:layout_below="@+id/heading_main"
            android:textSize="17sp"
            android:textColor="@color/textcolor"
            android:paddingTop="12dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/subheading2_main"
            android:id="@+id/subheading2_main"
            android:layout_below="@+id/subheading_main"
            android:textColor="#878686"
            android:gravity="center"
            android:layout_alignParentBottom="true"
             />

</RelativeLayout>

