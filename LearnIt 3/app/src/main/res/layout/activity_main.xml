<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:weightSum="5">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:padding="24dp"
        android:id="@+id/detailLayout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_1"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#184244"
            android:id="@+id/detailView"/>

    </LinearLayout>



</LinearLayout>

    <LinearLayout
        android:id="@+id/pageIndicatorLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginBottom="160dp">

        <ImageView
            android:visibility="visible"
            android:layout_width="@dimen/pageIndicatorWidth"
            android:layout_height="@dimen/pageIndicatorHeight"
            android:background="@drawable/circle"
            android:id="@+id/page1"
            android:scaleX="1.5"
            android:scaleY="1.5"
            />

        <ImageView
            android:visibility="visible"
            android:layout_width="@dimen/pageIndicatorWidth"
            android:layout_height="@dimen/pageIndicatorHeight"
            android:background="@drawable/circle"
            android:layout_marginLeft="6dp"
            android:id="@+id/page2"
            />

        <ImageView
            android:visibility="visible"
            android:layout_width="@dimen/pageIndicatorWidth"
            android:layout_height="@dimen/pageIndicatorHeight"
            android:background="@drawable/circle"
            android:layout_marginLeft="6dp"
            android:id="@+id/page3"
            />

        <ImageView
            android:visibility="visible"
            android:layout_width="@dimen/pageIndicatorWidth"
            android:layout_height="@dimen/pageIndicatorHeight"
            android:background="@drawable/circle"
            android:layout_marginLeft="6dp"
            android:id="@+id/page4"
            />


    </LinearLayout>


    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/heading_main"
        android:text="@string/heading_main"
        android:textSize="55sp"
        android:textColor="@color/textcolor3"
        android:paddingTop="28dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="GET STARTED"
        android:textColor="#879aa3"
        android:background="@drawable/cardripple"
        android:id="@+id/loginButton"
        android:padding="10dp"
        android:textSize="16sp"
        android:visibility="visible"
        android:clickable="true" />

</RelativeLayout>