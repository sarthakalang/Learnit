<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ececec"
    tools:context="com.android.learnit.Predefined">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginLeft="10dp"
        android:clickable="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="5dp"
        card_view:cardCornerRadius="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cardripple"


            android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Browse"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_margin="10dp"
            android:textColor="#276f26"/>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="17sp"
            android:textColor="#3c3c3c"
            android:textStyle="italic"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:text="Tired of adding every single word to your set? Don't worry we got your back. Start learning in a click with our handcrafted sets to help you learn easiliy and quickly. Here are few subjects to help you kickstart your learning. "/>
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <ListView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/predefinedlist">
    </ListView>
</LinearLayout>