<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="#19ae59"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="learnit.android.com.quuiz.Score">

    <TextView android:text="Your Score" android:layout_width="wrap_content"
        android:paddingTop="40dp"
        android:textSize="50sp"
        android:textColor="#fafafa"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fafafa"
        android:layout_gravity="center"
        android:textSize="50sp"
        android:text="Is"/>
    <TextView
        android:layout_width="wrap_content"
        android:paddingTop="30dp"
        android:layout_height="wrap_content"
        android:textColor="#fafafa"
        android:id="@+id/finalsc"
        android:textSize="55sp"
        android:layout_gravity="center"/>
    <Button
        android:layout_width="280dp"
        android:layout_marginTop="40dp"
        android:textColor="#19ae59"
        android:id="@+id/tryagain"
        android:background="@drawable/scorebutton"
        android:layout_gravity="center_horizontal"
        android:onClick="tryagain"
        android:layout_height="80dp"
        android:text="Try Again"
        android:textSize="30sp"/>

</LinearLayout>
