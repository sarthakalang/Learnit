<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.learnit"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
        <activity
            android:name="com.android.learnit.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.android.learnit.firstact"
            android:label=""
            android:theme="@style/ApTheme" >
        </activity>
        <activity
            android:name="com.android.learnit.words"
            android:label=""
            android:theme="@style/ApTheme" >
        </activity>
        <activity
            android:name="com.android.learnit.Register"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="com.android.learnit.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="com.android.learnit.Quiz"
            android:label="@string/title_activity_quiz"
            android:theme="@style/Flash"
            android:windowSoftInputMode="stateVisible" >
        </activity>
        <activity
            android:name="com.android.learnit.Score"
            android:label="@string/title_activity_score"
            android:theme="@style/Flash" >
        </activity>
        <activity
            android:name="com.android.learnit.Dashboard"
            android:label="@string/title_activity_dashboard"
            android:theme="@style/ApTheme" >
        </activity>
        <activity
            android:name="com.android.learnit.flashcard"
            android:label="@string/title_activity_flashcard"
            android:theme="@style/Flash" >
        </activity>
        <activity
            android:name="com.android.learnit.SetActivity"
            android:label=""
            android:theme="@style/ApTheme" >
        </activity>
        <activity
            android:name="com.android.learnit.ViewSets"
            android:label="LearnIt"
            android:theme="@style/ApTheme" >
        </activity>
        <activity
            android:name="com.android.learnit.match_game"
            android:label="Scatter" >
        </activity>
        <activity
            android:name="com.android.learnit.Predefined"
            android:label="@string/title_activity_predefined"
            android:theme="@style/ApTheme" >
        </activity>
        <activity
            android:name="android.support.v7.widget.TestActivity"
            android:label="RecyclerViewTestActivity" />
    </application>

</manifest>